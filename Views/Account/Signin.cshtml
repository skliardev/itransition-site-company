@model SigninViewModel
@{
    Layout = null;
    ViewData["title"] = "Sign-In";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["title"]</title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/bootstrap-responsive.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/maruti-login.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/maruti-style.css" asp-append-version="true" />
</head>
<body>
    <div id="loginbox">
        <form id="loginform" class="form-vertical" asp-controller="Account" asp-action="Signin" method="post">
            <div class="control-group normal_text"> <h3>Sign-In</h3></div>
            <div class="control-group" asp-validation-summary="All"></div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on"><i class="icon-user"></i></span><input asp-for="UserName" placeholder="Username" />
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on"><i class="icon-mail"></i></span><input asp-for="UserEmail" placeholder="Email" />
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div class="main_input_box">
                        <span class="add-on"><i class="icon-lock"></i></span><input asp-for="UserPassword" placeholder="Password" />
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <span class="pull-right"><input type="submit" class="btn btn-success" value="Create" /></span>
            </div>
        </form>
    </div> 
    <script src="~/js/jquery.min.js" asp-append-version="true"></script>  
    <script src="~/js/maruti.login.js" asp-append-version="true"></script> 
</body>
</html>
